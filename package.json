{
  "name": "template-binding",
  "version": "1.0.0",
  "description": "HTML template with binding",
  "main": "src/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "test:coverage": "istanbul cover _mocha -- -u exports -R spec",
    "test:mocha": "mocha",
    "test:lint": "eslint -- **/*.js",
    "test": "npm run test:lint && npm run test:mocha",
    "dev:browser": "browser-sync start -s --no-open -f **/*.{css,html} -f js/*.js",
    "dev:watch": "nodemon -x npm run",
    "build:webpack": "webpack",
    "build": "npm run clean && npm run build:webpack && NODE_ENV=production npm run build:webpack"
  },
  "author": "Ganesha <reekoheek@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.16.0",
    "chai": "^3.5.0",
    "eslint": "^3.6.0",
    "eslint-config-standard": "^6.0.1",
    "eslint-plugin-html": "^1.5.3",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "nightmare": "^2.7.0",
    "nodemon": "^1.10.2",
    "webpack": "^1.13.2"
  }
}
